@using itcast.crm16.Site.Models;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/AdminMaster.cshtml";
}
<div class="content">
    <div class="card-box">
        <!-- Row start -->
        <div class="am-g">
            <div class="am-u-sm-12 am-u-md-6">
                <div class="am-btn-toolbar">
                    <div class="am-btn-group am-btn-group-xs">
                        <button type="button" class="am-btn am-btn-secondary js-modal-open" id="commerceAdd"><span class="am-icon-plus"></span> 添加</button>
                    </div>
                </div>
            </div>

            <div class="am-u-sm-12 am-u-md-3">
                <div class="am-input-group am-input-group-sm">
                    <input type="text" class="am-form-field" id="searchValue">
                    <span class="am-input-group-btn">
                        <button class="am-btn am-btn-default" id="searchName" type="button">搜索</button>
                    </span>
                </div>
            </div>
        </div>
        <!-- Row end -->
        <!-- Row start -->
        <div class="am-g">
            <div class="am-u-sm-12">
                <form class="am-form">
                    <table class="am-table am-table-striped am-table-hover table-main am-table-centered">
                        <thead>
                            <tr>
                                
                                <th class="table-id">ID</th>
                                <th class="table-title">标题</th>
                                <th class="table-type">内容</th>
                                <th class="table-type">显示</th>
                                <th class="table-author am-hide-sm-only">作者</th>
                                <th class="table-date am-hide-sm-only">修改日期</th>
                                <th class="table-set">操作</th>
                            </tr>
                        </thead>
                        <tbody id="CommerceTbody"  data-type="@((ViewBag.DateList as List<CommerceViewModel>).FirstOrDefault().typeName)">
                            @foreach (var item in (ViewBag.DateList as List<CommerceViewModel>))
                            {
                                <tr>
                                   
                                    <td>@(item.Nid)</td>
                                    <td>@(item.Name)</td>
                                    <td>@item.Contents</td>
                                    <td class="am-hide-sm-only" data-id="@item.id"><input type="checkbox" class="am-switch  am-switch-success  newDisplay" @(item.Look == 0 ? "Checked" : "") /></td>
                                    <td class="am-hide-sm-only">@item.Creater</td>
                                    <td class="am-hide-sm-only">@item.UpdateTimeStr</td>
                                    <td>
                                        <div class="am-btn-toolbar">
                                            <div class="am-btn-group am-btn-group-xs">
                                                <a class="am-btn am-btn-default am-btn-xs am-text-secondary editCommerce" data-id="@item.id"><span class="am-icon-pencil-square-o"></span> 编辑</a>

                                                <a class="am-btn am-btn-default am-btn-xs am-text-danger am-hide-sm-only delCommerce" data-id="@item.id"><span class="am-icon-trash-o"></span> 删除</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="am-cf">
                        共 <span id="rowCount" data-pageCount="@((ViewBag.DateList as List<CommerceViewModel>).FirstOrDefault().typeName==2?ViewBag.PageCount:"")">@(ViewBag.TotalPage)</span> 条记录
                        <div class="am-fr" id="pageDemo">
                        </div>
                    </div>
                    <hr>
                    <p>注：.....</p>
                </form>

                <div class="am-modal am-modal-no-btn" tabindex="-1" id="doc-modal-1" dat>
                    <div class="am-modal-dialog">
                        <div class="am-modal-hd">
                            <label id="newTitle">添加章程</label>
                            <a href="javascript: void(0)" class="am-close am-close-spin" data-am-modal-close>&times;</a>
                        </div>
                        <div class="am-modal-bd">
                            <div class="am-u-md-12">
                                <form class="am-form am-text-sm">


                                    <div class="am-form-group">
                                        <div class="am-g">
                                            <label class="am-u-md-2 am-md-text-right am-padding-left-0" for="doc-ipt-text-1">标题</label>
                                            <input class="am-u-md-10 form-control" id="doc-ipt-text-1" placeholder="输入标题信息" data-id="0" required>
                                        </div>
                                    </div>

                                    <div class="am-form-group">
                                        <div class="am-g">
                                            <label class="am-u-md-2 am-md-text-right am-padding-left-0" for="doc-ta-1">内容</label>
                                            <textarea class="am-u-md-10" id="doc-ta-1"></textarea>
                                        </div>
                                    </div>
                                    <div class="am-form-group">
                                        <div class="am-g">
                                            <label class="am-u-md-6 am-md-text-right am-padding-left-0" for="doc-ta-1"></label>
                                            <div class="am-u-md-4  am-padding-right-0">
                                                <button type="button" class="am-btn am-btn-default " id="formSubmit" date-id="0"> 保存</button>
                                                <button type="button" class="am-btn am-btn-default  " style="margin-left:30px" id="Cancel"> 取消</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Row end -->
    </div>
</div>
@section Scripts{
<script type="text/javascript">
    var editorOption = {
        initialFrameWidth: 620,
        initialFrameHeight: 380,

        autoHeightEnabled: false,//设置滚动条出现
        toolbars: [
['source', 'undo', 'redo', 'bold', 'italic', 'indent',
'underline', 'fontborder', 'backcolor', 'fontsize', 'fontfamily',
'justifyleft', 'justifyright', 'justifycenter', 'justifyjustify',
'strikethrough', 'superscript', 'subscript', 'removeformat',
'formatmatch', 'autotypeset', 'blockquote', 'pasteplain', '|', 'print', 'date',
'insertimage', 'map',
'forecolor', 'backcolor', 'insertorderedlist', 'insertunorderedlist',
'selectall', 'cleardoc', 'link', 'unlink', 'emotion', 'help']
        ]
    };
    var editor = new baidu.editor.ui.Editor(editorOption);
    editor.addListener("ready", function () {
        // editor准备好之后才可以使用
        editor.setContent("");

    });
    editor.render('doc-ta-1');  //绑定id
</script>

    }

<script src="~/Areas/admin/Scripts/Commerce.js"></script>